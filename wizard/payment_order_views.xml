<?xml version="1.0"?>
<openerp>
    <data>
        <!-- View with the Generate File button. -->
        <record id="bgfilegenerator_view_form" model="ir.ui.view">
            <field name="name">Generate BG File</field>
            <field name="model">payment.order.bgfilegenerator</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Generate File Form">
                    <group colspan="4">
                            <button name="action_generate_file" string="Generate File" type="object" icon="gtk-execute" colspan="2"/>
                            <button special="cancel" string="Cancel" icon="gtk-cancel"  colspan="2"/>
                    </group>
                </form>
            </field>
        </record>
        <!-- Action for the menu. -->
        <record id="bgfilegenerator_action" model="ir.actions.act_window">
            <field name="name">Generate BG File</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">payment.order.bgfilegenerator</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="bgfilegenerator_view_form"/>
            <field name="target">new</field>
        </record>
        <!-- Binding event to action. Add to More button in Payment Orders. -->
        <record id="bgfilegenerator_values" model="ir.values">
            <field name="model_id" ref="model_payment_order_bgfilegenerator" />
            <field name="name">Generate BG File</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' +str(ref('bgfilegenerator_action'))" />
            <field name="key">action</field>
            <field name="model">payment.order</field>
        </record>
    </data>
</openerp>
